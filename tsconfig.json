{
    "compilerOptions": {
        "target": "es2015",
        "moduleResolution": "node",
        "removeComments": true,
        "noImplicitAny": false,
        "noLib" : false,
        "declaration" : false,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": false,
        "allowSyntheticDefaultImports": true,
        "plugins": [
            {
                "name": "typescript-lit-html-plugin"
            }
        ]
    }
}